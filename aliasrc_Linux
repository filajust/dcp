#
# Network admin things.
#

# List open TCP/UDP ports.
net_open_ports() {
}

# List open Unix sockets.
net_open_sockets() {
  sudo -H netstat --program --listening --all --numeric --wide | \
     awk '$1 == "unix" && $7 == "LISTENING" { print $9, $10 }' | \
     sort -g | column -t
}

net_open_all() {
}
