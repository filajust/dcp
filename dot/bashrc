export DCP="${HOME}/.dcp"

# Set up environment
[[ -e "${DCP}/envrc" ]] && source "${DCP}/envrc"

# Load most of dcp
[[ -e "${DCP}/initrc" ]] && source "${DCP}/initrc"

# Set PS1, etc.
dcp_set_prompt

# 'Command not found' hook for Arch Linux
if [[ -s "/usr/share/doc/pkgfile/command-not-found.bash" ]]; then
  source "/usr/share/doc/pkgfile/command-not-found.bash"
fi

# Finish up the details
[[ -e "${DCP}/post-initrc" ]] && source "${DCP}/post-initrc"
