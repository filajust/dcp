export DCP="${HOME}/.dcp"

# Set up environment
if [[ -e "${DCP}/lib/env.sh" ]]; then
  . "${DCP}/lib/env.sh"
fi

# Set up completion
. "${DCP}/lib/bash_completion.sh"

# PS1
if [[ -e "${DCP}/lib/ps1.sh" ]]; then
  . "${DCP}/lib/ps1.sh"
fi

set_prompt

# Load most of dcp
if [[ -e "${DCP}/lib/init.sh" ]]; then
  . "${DCP}/lib/init.sh"
fi

# Finish up the details
if [[ -e "${DCP}/lib/post_init.sh" ]]; then
  . "${DCP}/lib/post_init.sh"
fi
