#
# Add oh-my-zsh plugins
#

# Standard plugins
plugins=(history jsontools zsh-syntax-highlighting)

# Emoji probably don't matter in non-256color environments
if [[ "${TERM}" = *256color* ]]; then
  plugins+=(emoji)
fi

# Mac-specific plugins
if [[ "${DCP_OS}" = "Darwin" ]]; then
  plugins+=(brew-cask osx)
fi

# User-specified plugins

__load_plugins() {
  local plugin
  while read -r plugin; do
    plugins+=("${plugin}")
  done < <(cat "$1")
}

if [[ -s "${DCP_CONFIG_DIR}/plugins" ]]; then
  __load_plugins "${DCP_CONFIG_DIR}/plugins"
elif [[ -s "${DCP}/conf/plugins" ]]; then
  __load_plugins "${DCP}/conf/plugins"
fi

unset -f __load_plugins


#
# Load all the things!
#

# Load most of dcp
if [[ -e "${DCP}/lib/init.sh" ]]; then
  . "${DCP}/lib/init.sh"
fi

# Load oh-my-zsh
if [[ -e "${ZSH}/oh-my-zsh.sh" ]]; then
  . "${ZSH}/oh-my-zsh.sh"
fi

# Completion aliasing for GitHub CLI
if __is_command hub; then
  alias git="hub"

  if type compdef > /dev/null; then
     compdef hub=git
  fi
fi

# Finish up the details
if [[ -e "${DCP}/lib/post_init.sh" ]]; then
  . "${DCP}/lib/post_init.sh"
fi

# Enable fallback behavior when glob matching fails
unsetopt nomatch
