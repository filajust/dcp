[[ -s "$HOME/.dcp/initrc" ]] &&
  source "$HOME/.dcp/initrc"
[[ -s "$HOME/.dcp/localrc" ]] &&
  source "$HOME/.dcp/localrc"
[[ -s "$HOME/.rvm/scripts/rvm" ]] &&
  source "$HOME/.rvm/scripts/rvm"

[[ $TTY != *tty* && $TMUX != *tmux* ]] &&
  export TERM="xterm-256color"

export PATH="$PATH:$HOME/.dcp/bin"
export GREP_OPTIONS="--color=auto"
export LS_OPTIONS="--color=auto"
export CLICOLOR=1
export DCP="$HOME/.dcp"
export EDITOR="vim"
