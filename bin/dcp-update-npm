#!/usr/bin/env bash

[[ "$(uname)" = "Darwin" ]] ||
  { echo >&2 "Error: this script is only for use on Mac OS X!"; exit 1; }
[[ -d "/usr/local/Cellar/node" ]] ||
  { echo >&2 "Error: Node is not installed through Homebrew!"; exit 1; }

for category in 1 3 5 7; do
  ln -sf /usr/local/lib/node_modules/npm/man/man${category}/* /usr/local/share/man/man${category}
done
ln -sf /usr/local/lib/node_modules/npm/bin/npm-cli.js /usr/local/bin/npm

npm -g update npm
