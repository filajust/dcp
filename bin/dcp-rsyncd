#!/bin/bash

config_path="${HOME}/.dcp/conf/rsyncd.conf"
if [[ "$1" = "--help" ]]; then
  printf >&2 "Usage: $(basename "$0") [--help] [--write-config]\n"
elif [[ "$1" = "--write-config" ]]; then
  for group in $(groups); do break; done
  cat <<EOF | tee ${config_path} >/dev/null
uid = nobody
gid = nobody
use chroot = yes
max connections = 2
syslog facility = local5

[${USER}]
  path = ${HOME}
  uid = ${USER}
  gid = ${group}
  list = yes
  readonly = yes
EOF
else
  printf >&2 "Starting rsync daemon, Ctrl-C to quit...\n"
  sudo rsync --daemon --no-detach --config="${config_path}"
fi
