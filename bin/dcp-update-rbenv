#!/usr/bin/env bash

if [[ ! -d "${HOME}/.rbenv/bin" ]]; then
  echo >&2 "Error! rbenv isn't installed in ${HOME}!"
  exit 1
else
  cd "${HOME}/.rbenv"
  git fetch origin
  git rebase origin/master
  if [[ -d "${HOME}/.rbenv/plugins/ruby-build" ]]; then
    cd "${HOME}/.rbenv/plugins/ruby-build"
    git fetch origin
    git rebase origin/master
  fi
fi
