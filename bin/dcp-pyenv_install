#!/bin/bash

install_dir="${HOME}/.pyenv"
git_base="https://github.com/yyuu"

exec __dcp-vm_install "${git_base}/pyenv.git"                   \
                      "${install_dir}"                          \
                                                                \
                      "${git_base}/pyenv-virtualenv.git"        \
                      "${install_dir}/plugins/pyenv-virtualenv"
