#!/bin/bash

git rev-parse --is-inside-work-tree >/dev/null 2>/dev/null
if [[ "$?" != "0" ]]; then
  printf >&2 "Fatal: not inside a Git work tree.\n"
  exit 1
fi

read -p "What's the motto? " -n 4 -r
if [[ "${REPLY}" = "YOLO" ]]; then
  printf >&2 "\n"
  git commit --all --message="DEAL WITH IT"
  git push --force origin master
fi
