#!/usr/bin/env bash

for file in bash_logout bash_profile bashrc gemrc gitignore_global gvimrc \
            inputrc irbrc osx profile rvmrc tmux.conf vimrc xvimrc zprofile \
            zshenv zshrc; do
  if [[ -s "${HOME}/.${file}" ]]; then
    echo "${HOME}/.${file} already exists, deleting."
    rm -f "${HOME}/.${file}"
  fi
done
