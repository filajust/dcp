#!/usr/bin/env bash
#
# dcp-install_nvm - installs Node Version Manager at ~/.nvm
#
set -e

if [[ -s "${DCP}/lib/invocation.sh" ]]; then
  source "${DCP}/lib/invocation.sh"
else
  readonly DCP_SHELL_INVOCATION="exec $(basename "${SHELL}")"
fi

__git_clone_release "https://github.com/creationix/nvm.git" "${HOME}/.nvm"
printf "\n"
printf "Finished installing NVM. To start using it, \`${SHELL_INVOCATION}'"
