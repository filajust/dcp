#
# Common environment
#

export PATH="${PATH}:${DCP}/bin"
export GREP_OPTIONS="--color=auto"
export LS_OPTIONS="--color=auto"
export DPOGGI_TWOLINE="true"
export CLICOLOR="1"
export EDITOR="vim"


#
# DCP_OS var, check for Homebrew
#

export DCP_OS="$(uname -s)"
# Guard for Darwin because I know nothing about Linuxbrew
if [[ "${DCP_OS}" = "Darwin" && -x "/usr/local/bin/brew" ]]; then
  export PATH="/usr/local/bin:/usr/local/sbin:${PATH}"
fi


#
# Local environment
#

[[ -e "${DCP}/localenv" ]] && source "${DCP}/localenv"

# Extend PATH with $JAVA_HOME/bin if one was set in localenv
[[ -n "${JAVA_HOME}" ]] && export PATH="${PATH}:${JAVA_HOME}/bin"
